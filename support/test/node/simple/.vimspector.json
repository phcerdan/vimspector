{
  "configurations": {
    "run": {
      "adapter": "vscode-node",
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "program": "${workspaceRoot}/simple.js",
        "cwd": "${workspaceRoot}"
      }
    },
    "run - js-debug": {
      "adapter": "vscode-js-debug",
      "configuration": {
        "request": "launch",
        "console": "externalTerminal",
        "program": "${workspaceRoot}/simple.js",
        "cwd": "${workspaceRoot}",
        "trace": true,
        "stopOnEntry": true
      }
    }
  }
}
